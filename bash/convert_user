#!/bin/bash

set -o allexport
source .env.development
set +o allexport

while getopts r:i:t:e: flag
do
    case "${flag}" in
        r) role=${OPTARG};;
        i) id=${OPTARG};;
        t) type=${OPTARG};;
        e) env=${OPTARG};;
    esac
done
echo "converting role: $role for user: $id in environment $env";

npx ts-node lib/scripts/convert_user.ts $role $id $type $env

echo "Done!"
